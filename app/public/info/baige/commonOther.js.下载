function buySuccessAutoSendSms(obj,eventId){var autoFlag=$(obj).hasClass("b_over");var ajaxSave=function(){$.ajax({type:"POST",url:"/business/update_autoSendSms.action",data:{eventId:eventId,autoFlag:autoFlag},dataType:"json",success:function(resp){var resultObj=eval(resp);if(resultObj.retStatus==200){autoFlag?$(obj).removeClass("b_over").addClass("a_over"):$(obj).removeClass("a_over").addClass("b_over")}else{alertTips(resultObj.resultObject)}}})};if(autoFlag){bagEventAlert.confirm(i18n.commonError.smsSendConfirm,{confirm:function(){ajaxSave()}})}else{ajaxSave()}}function buyInAuditSuccessAutoSendSms(obj,eventId){var autoFlag=$(obj).hasClass("b_over");var ajaxSave=function(){$.ajax({type:"POST",url:"/business/updateAutoSendUnderAuditSms.action",data:{eventId:eventId,flag:autoFlag?"1":"0"},dataType:"json",success:function(resp){var resultObj=eval(resp);if(resultObj.retStatus==200){autoFlag?$(obj).removeClass("b_over").addClass("a_over"):$(obj).removeClass("a_over").addClass("b_over")}else{alertTips(resultObj.resultObject)}}})};if(autoFlag){bagEventAlert.confirm(i18n.commonError.smsSendConfirm,{confirm:function(){ajaxSave()}})}else{ajaxSave()}}function loadAutoSmsSendFlag(a){$.get("/business/loadAutoSmsSendFlag.action",{eventId:a},function(b){if("1"==b.resultObject){$("#autoSendSmsCheckBox").removeClass("b_over").addClass("a_over")}else{$("#autoSendSmsCheckBox").removeClass("a_over").addClass("b_over")}},"json")}function loadAutoInAuditSmsSendFlag(a){$.get("/business/loadAutoInAuditSmsSendFlag.action",{eventId:a},function(b){if("1"==b.resultObject){$("#autoSendVerifySmsCheckBox").removeClass("b_over").addClass("a_over")}else{$("#autoSendVerifySmsCheckBox").removeClass("a_over").addClass("b_over")}},"json")}function loadRefundTicketIntro(a){$.get("/business/loadRefundTicketIntro.action",{eventId:a},function(b){if(b.resultObject){$("#refund_intro").val(b.resultObject)}},"json")}function changeRefundTicket(d,a){var c=$(d).hasClass("a_over");var b=function(){$.ajax({type:"post",url:"/business/update_refundTicketType.action",data:{eventId:a,autoFlag:c},async:false,dataType:"json",success:function(e){if(e.retStatus==200){c?$(d).removeClass("a_over").addClass("b_over"):$(d).removeClass("b_over").addClass("a_over");$("#refund_intro").val(e.resultObject)}else{alertWarningTips(e.resultObject)}}})};if(c){bagEventAlert.confirm(i18n.common.notSupportRefund,{confirm:function(){b()}})}else{b()}}function saveRefundTicketIntro(a){var b=$("#refund_intro").val();$.ajax({type:"post",url:"/business/saveRefundTicketIntro.action",data:{eventId:a,intro:b},async:false,dataType:"JSON",success:function(c){if(c.retStatus==200){alertSuccessTips(i18n.common.saveSuccess)}else{alertWarningTips(c.resultObject)}}})};