<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/public/favicon.ico" type="image/x-icon" />
    <title>晋城职业技术学院-添加学生</title>
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/public/css/animate.css" rel="stylesheet">
    <link href="/public/css/style.css" rel="stylesheet">
    <script src="/public/js/jquery-3.1.1.min.js"></script>
</head>

<body>
    <div id="wrapper">
        <% include /teacherpartial/nav.ejs %>
        <script>
            var activity = "studentadd";
            $('#side-menu .' + activity).addClass('active');
            $($('#side-menu .' + activity).parent().parent()[0]).addClass('active');
        </script>
        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <% include /teacherpartial/header.ejs %>
            </div>
            <style>
                #userinfo .form-group label {
                    text-align: right;
                }

                .btn-primary2 {
                    background-color: #177ce4;
                    height: 30px;
                    width: 100px;
                    color: #fff;
                    border: none;
                    cursor: pointer;
                    text-align: center;
                    display: block;
                    font-size: 15px;
                }
            </style>
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                        <div class="col-lg-12">
                                <div class="alert alert-info alert-dismissible" role="alert"><button type="button" class="close"
                                        data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button> <span
                                        id="tip">新添加的用户密码都是：123456</span></div>
                            </div>
                    <div class="col-lg-12" id="userinfo">
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-1 col-form-label">姓名</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-1 col-form-label">性别</label>
                            <div class="col-sm-10">
                                <select class="custom-select mr-sm-2" id="sex">
                                    <option value="1">女</option>
                                    <option value="0">男</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-1 col-form-label">系别</label>
                            <div class="col-sm-10">
                                <select class="custom-select mr-sm-2" id="department">

                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-1 col-form-label">班级</label>
                            <div class="col-sm-10">
                                <select class="custom-select mr-sm-2" id="clas">

                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-1 col-form-label">学号</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="studentid">
                            </div>
                        </div>
                        <div style="height: 52px;">
                            <button type="button" class="btn btn-primary2" style="display: block;margin: 0 auto;" id="submit">提交</button>
                        </div>
                    </div>
                </div>
            </div>
            <% include /teacherpartial/footer.ejs %>
        </div>
    </div>

    <script src="/public/js/popper.min.js"></script>
    <script src="/public/js/bootstrap.min.js"></script>
    <script src="/public/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/public/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="/public/js/inspinia.js"></script>
    <script src="/public/js/plugins/pace/pace.min.js"></script>

    <script>
        initView();
        let arrDepClas = {}; //目前所有系与班级
        function initView() {
            //渲染系别select
            departmentFullView(function (data) {
                $('#userinfo #department').html(data);
            });
        }

        function departmentFullView(callbcak) {
            let html = '';
            $.ajax({
                url: "/clasdepartment",
                type: "GET",
                success: function (data) {
                    arrDepClas = data.data;
                    let arr = Object.keys(data.data);
                    arr.map(function (ele) {
                        html += `<option value="${ele}">${ele}</option>`
                        callbcak(html);
                    });
                    clasFullView(arrDepClas, arr[0]);
                },

                error: function (err) {
                    console.error(err);
                }
            });
        }

        //系别变化时 班级的变化
        $('#userinfo #department').change(function () {
            let department = $('#userinfo #department').find("option:selected").val();
            clasFullView(arrDepClas, department);
        });

        function clasFullView(arr, department) {
            let html = '';
            arr[department].map(function (ele) {
                html += `<option value="${ele}">${ele}</option>`;
            });
            $('#userinfo #clas').html(html);
        }
        $('#submit').click(function () {
            let name = $('#userinfo #name').val();
            let sex = $('#userinfo #sex').val();
            let studentid = $('#userinfo #studentid').val();
            let department = $('#userinfo #department').find("option:selected").val();
            let clas = $('#userinfo #clas').find("option:selected").val();
            if (name === '') {
                alert('姓名不能为空!');
                return;
            }
            if (studentid == '') {
                alert('学号不能为空');
                return;
            }
            $('.wrapper-content').mLoading({
                text: "加载中...",
            });
            $.ajax({
                url: "/teacher/students/index",
                type: "POST",
                data: {
                    name: name,
                    sex: sex,
                    studentid: studentid,
                    department: department,
                    clas: clas
                },
                dataType: 'JSON',
                success: function (data) {
                    $('.wrapper-content').mLoading('hide');
                    if (data.code === 1) {
                        alert('添加成功');
                        window.location.reload();
                    } else {
                        alert(data.err);
                    }
                },

                error: function (err) {
                    $('.wrapper-content').mLoading('hide');
                    alert(err);
                }
            });
        })


    </script>
</body>

</html>